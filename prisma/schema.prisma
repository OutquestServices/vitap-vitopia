generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  event     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model sports {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  startPrice  String
  endPrice    String
  imageLink   String
  link        String
  rules       Json?
  firstPrize  String
  secondPrize String
  thirdPrize  String
  totalPrize  String
  venue       String
  startDate   String
  endDate     String
  startTime   String
  endTime     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model loginHistory {
  id         Int      @id @default(autoincrement())
  googleId   String
  email      String
  name       String
  image      String
  role       String
  event      String?
  loggedInAt DateTime @default(now())
}

model sportsRegistration {
  id             Int      @id @default(autoincrement())
  name           String
  email          String
  sport          String
  amount         String
  purchasedAt    DateTime
  invoiceId      String
  orderId        String
  receiptId      String
  universityName String?
  coachName      String?
  coachMobile    String?
}

model Posters {
  id         Int      @id @default(autoincrement())
  eventId    String   @unique
  image      String
  name       String
  regNo      String
  department String   
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
